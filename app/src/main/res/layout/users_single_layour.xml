<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/nameId"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/circleImageView"
        android:layout_toEndOf="@+id/circleImageView"
        android:text="Nickname"
        android:textSize="@dimen/fui_field_padding_vert"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/statusId"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/circleImageView"
        android:layout_alignStart="@+id/nameId"
        android:text="Status" />


</RelativeLayout>